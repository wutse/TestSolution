<Window
    x:Class="TestWPFAsync.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestWPFAsync"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel x:Uid="MainViewModel" />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="0"
            Command="{Binding TestAsycnCommand}"
            Content="TestAsync1" />
        <Button
            Grid.Column="1"
            Command="{Binding ChangeMessageCommand}"
            Content="TestAsync2" />
        <TextBlock Grid.Column="2" Text="{Binding Message}" />
    </Grid>
</Window>
